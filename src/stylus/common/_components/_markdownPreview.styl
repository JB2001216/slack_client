.markdownPreview
  padding: 16px
  *:nth-child(1)
    margin-top: 0
  h1,h2,h3,h4,h5,h6,p,li,dt,dd,th,td,blockquote
    color: #333
    line-height: 1.5
    text-align: left
  h1,h2,h3,h4,h5,h6
    margin: 25px 0 15px 0
    font-weight: 700
  p,li,dt,dd,th,td,blockquote
    font-size: 16px
    line-height: 1.5
  p
    margin: 25px 0 15px 0
    strong
      font-weight: bold
    em
      font-style: italic
    del
      text-decoration: line-through
    a
      color: $colors.primaryBlue
      text-decoration: none
      &:hover
        text-decoration: underline
    code
      display: inline-block
      padding: 2px 5px
      background: $colors.whiteDarken1
      border: 1px solid #e0e0e0
      border-radius: 2px
      font-family: $fontFamilyBody
      color: #E02D2D
      font-size: 14px
      line-height: 1.43
  h1
    font-size: 26px
  h2
    padding-bottom: 10px
    border-bottom: 1px solid #e0e0e0
    font-size: 22px
  h3
    font-size: 20px
  h4
    font-size: 18px
  h5
    font-size: 16px
  h6
    font-size: 15px
  ul,ol
    margin: 25px 0 15px 24px
    li
      margin-top: 8px!important
      ul
        list-style: circle
      ol
        margin-left: 20px
        list-style: lower-latin
  ul
    list-style: disc
  ol
    list-style: decimal
  blockquote
    padding-left: 18px
    margin: 25px 0 15px 0
    border-left: 4px solid #e0e0e0
    p
      padding-left: 18px
      margin-top: 15px!important
      border-left: 4px solid #e0e0e0
  hr
    margin: 40px 0
    border-top: 5px solid #e0e0e0
  pre
    display: block
    margin: 25px 0 15px 0
    white-space: nowrap
    code
      display: inline-block
      padding: 8px 12px
      background: $colors.whiteDarken1
      border: 1px solid #e0e0e0
      border-radius: 2px
      font-family: $fontFamilyBody
      color: #333
      font-size: 14px
      line-height: 1.43
  table
    margin: 25px 0 15px 0
    tr
      th,td
        padding: 12px 16px
        border: 1px solid #e0e0e0
        color: #333
        font-size: 14px
        line-height: 1.43
        word-break: break-all
      th
        background: $colors.whiteDarken1
        font-weight: 700
      td
        background: #fff
        &[align=left]
          text-align: left
        &[align=right]
          text-align: right
        &[align=center]
          text-align: center

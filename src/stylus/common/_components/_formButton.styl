/*
Form Button

Markup:
<button class="{{modifier_class}}">Upload Image</button>

.formButtonLight - Light
.formButtonLight.disabled - Disabled Option (Same style as :disabled="true")

Styleguide 11.2
*/
.formButton
  font-family: $fontFamilyBody
  font-size: 16px
  font-weight: bold
  height: 40px
  line-height: 38px
  box-sizing: border-box
  padding: 0 12px
  border-radius: 4px
  cursor: pointer
  outline: none
  border: solid 1px transparent
  user-select: none
  &:disabled,
  &.disabled
    opacity: 0.3
    cursor: default
    pointer-events: none

.formButtonLight
  @extends .formButton
  color: $colors.primaryBlack
  background-color: $colors.white
  border-color: $colors.lightGray
  &:hover
    background-color: $colors.whiteDarken1

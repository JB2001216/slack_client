  font-weight: normal;
  font-size: 12px;
}

//ボタン
.btn{
  font-weight: bold;
  font-size: 14px;
}

//ステータス
.status{
  display: inline-block;
  color: #FFF;
  padding: 4px 12px;
  border-radius: 24px;
  &.status_1{
    background: #E69A17;
  }
}

//clearfix
.clearfix {
  zoom: 1;
  &:after {
    content: "";
    clear: both;
    display: block;
  }
}

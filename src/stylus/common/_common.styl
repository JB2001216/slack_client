body{
  font-family: Noto Sans CJK JP;
  font-style: normal;
  font-weight: normal;
  font-size: 14px;
  line-height: normal;
  color: #000;
  .preload{
    transition: none !important;
  }
}

.home{
  height: 100vh;
  display: grid;
  grid-template-rows: 1fr;
  grid-template-columns: 60px 200px minmax(300px, 0.6fr) minmax(440px, 1fr);
  grid-gap: 0;
  .teamColumn{
    grid-row: 1;
    grid-column: 1 / 2;
  }
  .projectColumn{
    grid-row: 1;
    grid-column: 2 / 3;
  }
  .subColumn{
    grid-row: 1;
    grid-column: 3 / 4;
  }
  .mainColumn{
    grid-row: 1;
    grid-column: 4 / 5;
    position: relative;
    max-height: 100vh;
  }
}

.columnTitle
  padding: 36px 20px 16px
  min-height: 40px
  display: flex
  justify-content: space-between
  align-items: center
  h2
    display: block
    width: calc(100% - 220px)
    font-size: 18px
  input[type=text]
    box-sizing: border-box
    height: 33px
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis
    font-size: 18px
    font-weight: bold
    padding: 8px
    max-width: 100%
    min-width: 100px


//テキスト設定
.t-hero{
  font-weight: bold;
  font-size: 52px;
}
.t-display2{
  font-weight: bold;
  font-size: 45px;
}
.t-display1{
  font-weight: bold;
  font-size: 34px;
}
.t-heading{
  font-weight: bold;
  font-size: 24px;
}
.t-title{
  font-weight: bold;
  font-size: 22px;
}
.t-sub{
  font-weight: bold;
  font-size: 18px;
}
.t-bold{

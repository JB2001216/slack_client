.option{
  &_spaceProfileAccount{
    // 共通ボタン
    &_button{
      min-width: 145px;
      height: 40px;
      padding: 9px;
      background: $colors.primaryBlue
      border: none;
      border-radius: 20px;
      cursor: pointer;
      outline: none;
      color: #FFFFFF;
      font-family: $fontFamilyBody;
      font-size: 14px;
      font-weight: bold;
      line-height: 20px;
      text-align: center;
      &:disabled {
        opacity: 0.3;
        cursor: default;
      }
    }
    h3{
      margin-top: 45px;
      &:first-child{
        margin-top: 0;
      }
    }
    &_description{
      margin-top: 25px;
      color: #333;
      font-size: 16px;
      line-height: 1.5;
      strong{
        font-weight: 700;
      }
    }
    &_subTitle{
      margin-top: 15px;
      font-weight: 700;
      color: #333;
      font-size: 16px;
      line-height: 1.5;
    }
    &_text{
      margin-top: 15px;
      p{
        margin-top: 15px;
        color: #666666;
        font-family: $fontFamilyBody;
        font-size: 14px;
        line-height: 21px;
      }
    }
    &_email{
      input[type=email]{
        width: 100%;
        max-width: 305px;
        padding: 7px 15px;
        margin-top: 15px;
        margin-right: 15px;
        border: 1px solid $colors.lightGray
        border-radius: 4px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        color: #333333;
        font-family: $fontFamilyBody;
        font-size: 16px;
        line-height: 1.5;
        &::placeholder{
          color: #ccc;
        }
      }
      button{
        margin-top: 15px;
      }
      * {
        vertical-align: top;
      }
    }
    &_tel{
      input[type=tel]{
        width: 100%;
        max-width: 200px;
        padding: 7px 15px;
        margin-top: 15px;
        margin-right: 15px;
        border: 1px solid $colors.lightGray
        border-radius: 4px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        color: #333333;
        font-family: $fontFamilyBody;
        font-size: 16px;
        line-height: 1.5;
        &::placeholder{
          color: #ccc;
        }
      }
      button{
        min-width: 185px;
        margin-top: 15px;
      }
      * {
        vertical-align: top;
      }
    }
    &_password{
      input[type=text]{
        width: 100%;
        max-width: 200px
        padding: 7px 15px;
        border: 1px solid $colors.lightGray
        border-radius: 4px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        color: #333333;
        font-family: $fontFamilyBody;
        font-size: 16px;
        line-height: 1.5;
        margin-top: 15px;
        &::placeholder{
          color: #ccc;
        }
      }
    }
    &_addButton{
      margin-top: 50px;
      button{
        float: left;
      }
    }
    &_sent{
      width: 400px;
      padding: 25px 70px 25px 25px;
      background: #EBF0F5;
      border-radius: 8px;
      cursor: pointer;
      position: fixed;
      right: 30px;
      bottom: 30px;
      &:before,
      &:after{
        content: "";
        display: block;
        width: 20px;
        height: 2px;
        themeBackgroundColor('active')
        position: absolute;
        top: 0;
        right: 22px;
        bottom: 0;
        margin: auto;
      }
      &:before{
        transform: rotate(315deg);
      }
      &:after{
        transform: rotate(-315deg);
      }
      p{
        themeColor('active')
        font-family: $fontFamilyBody;
        font-size: 16px;
        font-weight: bold;
        line-height: 1.5;
      }
    }
  }
}

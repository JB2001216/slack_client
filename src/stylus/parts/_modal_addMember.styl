.modalWrap{
  *{
    box-sizing: border-box;
  }
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 100vh;
  background: #aaa;
  position: relative;
}
.modal{
  max-width: 960px;
  max-height: 450px;
  padding: 50px 40px;
  background: #fff;
  box-shadow: 0px 8px 32px rgba(0, 0, 0, 0.2);
  border-radius: 8px;
  overflow-y auto;
  &_container{
    h2{
      font-family: $fontFamilyBody;
      font-size: 22px;
      line-height: normal;
      color: #333333;
    }
    table{
      width: 100%;
      table-layout: fixed;
      tr{
        td{
          padding-top: 20px;
          &:nth-child(odd){
            width: 29%;
            padding-left: 2%;
          }
          &:nth-child(even){
            width: 20%;
            padding-left: 2%;
          }
          &:first-child{
            padding-left: 2%;
          }
          input[type=text], select, option{
            width: 100%;
            padding: 15px;
            background: #fff;
            font-size: 14px;
            color: #333;
            border: 1px solid $colors.lightGray
            box-sizing: border-box;
            border-radius: 4px;
            font-weight: 700;
          }
          input[type=text]{
            font-weight: 400;
          }
          input[type=text]::placeholder{
            color: $colors.lightGray
          }
        }
      }
    }
    &_submit{
      button{
        display: block;
        width: 189px;
        height: 40px;
        margin: 36px auto 0 auto;
        themeBackgroundColor('active')
        border: none;
        border-radius: 90px;
        cursor: pointer;
        font-family: $fontFamilyBody;
        font-size: 14px;
        text-align: center;
        color: #FFFFFF;
      }
    }
  }
}

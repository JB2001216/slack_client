.option{
  &_spaceMember{
    &_table{
      table{
        width: 100%;
        margin-top: 10px;
        tr{
          th,
          td{
            vertical-align: middle;
            padding: 16px 15px 16px 0;
            border-bottom: 1px solid #E0E0E0;
            text-align: left;
            &:nth-of-type(1){
              width: 55px;
            }
            &:nth-of-type(2){
              width: 250px;
            }
            &:nth-of-type(3){
              width: 140px;
            }
            &:nth-of-type(4){
              width: 194px;
              padding-right: 0;
            }
          }
          th{
            font-family: "Noto Sans CJK JP";
            font-size: 16px;
            font-weight: bold;
            line-height: 24px;
          }
          td{
            .select{
              float: left;
              width: calc(100% - 40px);
              position: relative;
              &:after{
                content: "";
                display: block;
                width: 12px;
                height: 6px;
                background: url('~@/assets/images/parts/icon_option_space_member_selectArrow.svg') no-repeat top left;
                pointer-events: none;
                position: absolute;
                top: 0;
                right: 15px;
                bottom: 0;
                margin: auto;
              }
              select{
                width: 100%;
                height: 40px;
                padding: 9px 35px 9px 15px;
                border: 1px solid #c4c4c4;
                border-radius: 4px;
                appearance: none;
                color: #333333;
                font-family: "Noto Sans CJK JP";
                font-size: 14px;
                line-height: 20px;
                &::-ms-expand{
                  display: none;
                }
                &::placeholder{
                  color: #ccc;
                }
              }
            }
            button{
              float: right;
              display: block;
              width: 40px;
              height: 40px;
              background: none;
              border: none;
              cursor: pointer;
              outline: none;
              position: relative;
              &:before,
              &:after{
                content: "";
                display: block;
                width: 15px;
                height: 1px;
                background: #6d6d6d;
                position: absolute;
                left: 0;
                right: 0;
                margin: auto;
              }
              &:before{
                top: 20px;
                transform: rotate(315deg);
              }
              &:after{
                top: 20px;
                transform: rotate(-315deg);
              }
            }
          }
        }
      }
      &_img{
        width: 40px;
        height: 40px;
        border-radius: 4px;
        overflow: hidden;
        &.bg{
          &_blue{
            background-color: $colors.primaryBlueDark
          }
        }
        p{
          color: #FFFFFF;
          font-family: "Noto Sans CJK JP";
          font-size: 25px;
          font-weight: bold;
          line-height: 37px;
          text-align: center;
        }
      }
    }
    &_addButton{
      margin-top: 25px;
      button{
        padding-left: 30px;
        background: url('~@/assets/images/parts/img_option_space_member_add.svg') no-repeat center left, transparent;
        border: none;
        cursor: pointer;
        outline: none;
        color: $colors.primaryBlue
        font-family: "Noto Sans CJK JP";
        font-size: 16px;
        font-weight: bold;
        line-height: 24px;
      }
    }
    &_addBar{
      width: 100%;
      padding: 17px 20px;
      background-color: #FFFFFF;
      box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.16);
      color: #333333;
      font-family: "Noto Sans CJK JP";
      font-size: 20px;
      font-weight: bold;
      line-height: 29px;
      text-align: center;
      position: fixed;
      left: 0;
      bottom: 0;
      z-index: 1;
      button{
        padding-left: 30px;
        background: url('~@/assets/images/parts/img_option_space_member_add.svg') no-repeat center left, transparent;
        border: none;
        cursor: pointer;
        outline: none;
        color: $colors.primaryBlue
        font-family: "Noto Sans CJK JP";
        font-size: 16px;
        font-weight: bold;
        line-height: 24px;
      }
    }
  }
}

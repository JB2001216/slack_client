.optionWrap
  position: fixed
  top: 0
  left: 0
  right: 0
  bottom: 0
  z-index: 100
  background: #fff

  .option_container
    padding-bottom: 0
    padding-right: 0

    .option_subColumn,
    .option_mainColumn
      padding-bottom: 90px
      height: calc(100vh - 111px)
      overflow-y: auto

    .option_mainColumn
      padding-right: 20px
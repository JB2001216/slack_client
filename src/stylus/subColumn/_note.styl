.note
  &_menu
    display: flex
    justify-content: space-between
    align-items: center
    padding: 0 20px
    background-color: $colors.whiteDarken1
    border-top: solid 1px $colors.lightGrayLighten2
    border-bottom: solid 1px $colors.lightGrayLighten2
    &_favorite
      transition: 0.5s
      display: flex
      themeFill('icon')
      &:not(.active):hover
        themeFill('iconDarken1')
      &.active:hover
        fill: #EDA62A
    &_right
      a
        color: #333
        text-decoration: none
        display: inline-block
        min-height: 40px
        line-height: 40px
        margin-left: 17px
      svg
        fill: currentColor
        vertical-align: sub
  &_add
    display: block
    themeColor('active')
    text-decoration: none
    padding: 10px 20px
    height: 40px
    box-sizing: border-box
    border-bottom: 1px solid $colors.lightGrayLighten2
    svg
      fill: currentColor
      vertical-align: text-top
      margin-right: 4px
  &_item
    box-sizing: border-box
    display: flex
    justify-content: flex-start
    align-items: center
    flex-wrap: nowrap
    width: 100%
    min-height: 40px
    padding: 0 12px 0 0
    background: #FFF
    transition: background 0.25s
    position: relative
    &:before
      content: ''
      display: none
      position: absolute
      width: 100%
      height: 1px
      background: $colors.lightGrayLighten2
      top: -1px
      right: 0
    &:after
      content: ''
      display: block
      position: absolute
      width: calc(100% - 51px)
      height: 1px
      background: $colors.lightGrayLighten2
      bottom: -1px
      right: 0
    &:hover
      background: $colors.whiteDarken1
      &:before
        display: block
      &:after
        width: 100%
      .note_item_add
        opacity: 1
        pointer-events: all
    &.active
      themeBackgroundColor('activeLighten5')
      &:before
        display: block
        themeBackgroundColor('activeLighten2')
        z-index: 1
      &:after
        width: 100%
        themeBackgroundColor('activeLighten2')
        z-index: 1
    &_bar
      display: block
      width: 18px
      height: 40px
      position: relative
      margin-right: 2px
      cursor: grab
      &:before
        content: ''
        display: block
        width: 2px
        height: 20px
        border-radius: 4px
        background: $colors.lightGray
        position: absolute
        top: 0
        left: 0
        bottom: 0
        right: 0
        margin: auto
      &:active
        cursor: grabbing
    &.indent
      .note_item_bar
        margin-left: 45px
    &_image
      max-width: 24px
      max-height: 24px
      margin-right: 8px
      img
        vertical-align: middle
    &_name
      flex: 1
      overflow: hidden
      white-space: nowrap
      text-overflow: ellipsis
    &_add
      width: 16px
      height: 16px
      opacity: 0
      transition: 0.25s
      padding: 0
      margin-right: 8px
      margin-left: 4px
      themeFill('icon')
      &:hover
        themeFill('iconDarken1')
    &_date
      padding: 0 8px 0 4px

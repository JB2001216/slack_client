    "vue": "^2.6.10",
    "vue-class-component": "^7.0.2",
    "vue-flash-message": "^0.7.2",
    "vue-i18n": "^8.14.1",
    "vue-infinite-loading": "^2.4.4",
    "vue-property-decorator": "^8.2.2",
    "vue-router": "^3.1.3",
    "vue-scrollto": "^2.17.1"
